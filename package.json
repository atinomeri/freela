{
  "name": "freela",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/check-env.mjs",
    "dev": "next dev",
    "prebuild": "node scripts/check-env.mjs",
    "build": "next build",
    "prestart": "node -e \"process.env.NODE_ENV='production'; import('./scripts/check-env.mjs')\"",
    "start": "next start",
    "lint": "eslint .",
    "clean:next": "node scripts/clean-next.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:critical": "playwright test tests/e2e/smoke.spec.ts --grep \"register freelancer â†’ browse by category and orders list|admin can save content via admin API|admin can reply to support thread\"",
    "analyze": "cross-env ANALYZE=true npm run build",
    "ci:db:reset": "cross-env CI=true node scripts/ci-reset-db.mjs",
    "db:backup": "node scripts/pg-backup.mjs",
    "db:restore": "node scripts/pg-restore.mjs",
    "uploads:cleanup": "node scripts/uploads-cleanup.mjs",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "prisma:generate": "prisma generate --config=./prisma.config.ts",
    "prisma:migrate": "prisma migrate dev --config=./prisma.config.ts",
    "prisma:migrate:deploy": "prisma migrate deploy --config=./prisma.config.ts",
    "prisma:validate": "prisma validate --config=./prisma.config.ts",
    "prisma:studio": "prisma studio --config=./prisma.config.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@sentry/nextjs": "^10.38.0",
    "@swc/helpers": "^0.5.18",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.34.0",
    "clsx": "^2.1.1",
    "libphonenumber-js": "^1.12.36",
    "lucide-react": "^0.475.0",
    "next": "^16.1.6",
    "next-auth": "^4.24.13",
    "next-intl": "^4.8.2",
    "nodemailer": "^7.0.13",
    "pg": "^8.18.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "redis": "^5.10.0",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.24.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.1",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitest/coverage-v8": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^16.1.6",
    "postcss": "^8.4.49",
    "prisma": "^7.3.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  }
}
